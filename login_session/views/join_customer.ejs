    <script>
      $(function(){

        $("#btnJoin").click(
          function(){

            if($("#cust_id").val() == "")
            {
              alert("아이디를 꼭 입력 하세요");
              $("#cust_id").focus();
              return;              
            }
            if($("#cust_pwd").val() == "")
            {
              alert("비밀번호를 꼭 입력 하세요");
              $("#cust_pwd").focus();
              return;              
            }
            if($("#cust_name").val() == "")
            {
              alert("이름을 꼭 입력 하세요");
              $("#cust_name").focus();
              return;              
            }
            if($("#cust_email").val() == "")
            {
              alert("이메일을 꼭 입력 하세요");
              $("#cust_email").focus();
              return;              
            }
            if($("#tel2").val() == "")
            {
              alert("전화번호 두번째 자리를 확인해 주세요");
              $("#tel2").focus();
              return;              
            }
            if($("#tel3").val() == "")
            {
              alert("전화번호 세번째 자리를 확인해 주세요");
              $("#tel3").focus();
              return;              
            }

            var cust_phone_num=$("#tel1").val()+ $("#tel2").val()+ $("#tel3").val();
            $("#cust_phone_num").val(cust_phone_num);

            if($("#birth1").val() == "")
            {
              alert("생년월일 첫번째 자리를 확인해 주세요");
              $("#birth1").focus();
              return;              
            }
            if($("#birth2").val() == "")
            {
              alert("생년월일 첫번째 자리를 확인해 주세요");
              $("#birth2").focus();
              return;              
            }
            if($("#birth3").val() == "")
            {
              alert("생년월일 첫번째 자리를 확인해 주세요");
              $("#birth3").focus();
              return;              
            }
            if($("#birth1").val().length != 4)
            {
              alert("연도는 4글자로 입력하세요");
              $("#birth1").focus();
              return;              
            }
            /*if(isNaN($("#birthday").val()))
            {
              alert("생일은 숫자만 입력하세요");
              $("birthbday").focus();
              return;              
            }*/
            var birthday=$("#birth1").val()+'-'+$("#birth2").val()+'-'+$("#birth3").val();
            $("#birthday").val(birthday);
            /*if($("#birthday").val() == "")
            {
              alert("생일을 꼭 입력하세요");
              $("#birthday").focus();
              return;              
            }
            if($("#birthday").val().length != 8)
            {
              alert("생일은 8글자로 입력하세요");
              $("#birthday").focus();
              return;              
            }*/
            if($("#address").val() == "")
            {
              alert("주소를 꼭 입력하세요");
              $("#address").focus();
              return;              
            }
            if($("#zipcode").val()=="")
            {
              alert("우편번호를 꼭 입력하세요");
              $("#zipcode").focus();
              return;
            }
            $("#joinForm").submit();
            });
        });
    </script>
