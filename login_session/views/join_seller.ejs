<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-3.6.0.min.js"></script>
    <script>
      $(function(){

        $("#btnJoin").click(
          function(){

            if($("#sell_id").val() == "")
            {
              alert("아이디를 꼭 입력 하세요");
              $("#sell_id").focus();
              return;              
            }
            if($("#sell_pwd").val() == "")
            {
              alert("비밀번호를 꼭 입력 하세요");
              $("#sell_pwd").focus();
              return;              
            }
            if($("#sell_name").val() == "")
            {
              alert("이름을 꼭 입력 하세요");
              $("#sell_name").focus();
              return;              
            }
            if($("#sell_email").val() == "")
            {
              alert("이메일을 꼭 입력 하세요");
              $("#sell_email").focus();
              return;              
            }
            if($("#tel2").val() == "")
            {
              alert("전화번호 두번째 자리를 확인해 주세요");
              $("#tel2").focus();
              return;              
            }
            if($("#tel3").val() == "")
            {
              alert("전화번호 세번째 자리를 확인해 주세요");
              $("#tel3").focus();
              return;              
            }
            var sell_phone_num=$("#tel1").val()+ $("#tel2").val()+ $("#tel3").val();
            $("#sell_phone_num").val(sell_phone_num);
            $("#joinForm").submit();
            });
        });
    </script>
  </head>
    <body>
      <h1><%= title %></h1>
      <form id="joinForm" action="/join/seller" method="post">
        <table width="400" border="1">
          <tr>
            <td colspan="2">판매자 회원가입</td>
          <tr>
            <th>아이디</th>
            <td><input type="text" name="sell_id" id="sell_id" size="12" maxlength="12"></td>
          </tr>
          <tr>
            <th>비밀번호</th>
            <td><input type="password" name="sell_pwd" id="sell_pwd" size="12" maxlength="12"></td>
          </tr>
          <tr>
            <th>이름</th>
            <td><input type="text" name="sell_name" id="sell_name" size="10" maxlength="10"></td>
          </tr>
          <tr>
            <th>이메일</th>
            <td><input type="email" name="sell_email" id="sell_email" size="30" maxlength="50"></td>
          </tr>
          <tr>
            <th>전화번호</th>
            <td><input type="hidden" name="sell_phone_num" id="sell_phone_num">
            <select name="tel1" id="tel1">
              <option value="010">010</option>
              <option value="011">011</option>
              <option value="016">016</option>
              <option value="017">017</option>
              <option value="018">018</option>
              <option value="019">019</option>
            </select>
            <input type="text" name="tel2" id="tel2" size="4" maxlength="4">
            <input type="text" name="tel3" id="tel3" size="4" maxlength="4">
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <button type="submit" id="btnJoin" name="join" value="가입">가입</button>
              <input type="reset" name="cancel" value="취소">
            </td>
          </tr>
        </table>
      </form>
    </body>
</html>
